{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src",
        // "strict": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}